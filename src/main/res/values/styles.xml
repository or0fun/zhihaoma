<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 主按钮 -->
    <style name="mainButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/buttonHeight</item>
        <item name="android:background">@drawable/main_button_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
    </style>

    <!-- 主按钮 -->
    <style name="mainButtonTransparent" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/buttonHeight</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
    </style>

    <!-- 号码 -->
    <style name="titleText" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <!-- 号码归属地 -->
    <style name="subText" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/subTextSize</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <!-- 副按钮 -->
    <style name="subButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">@dimen/subbuttonHeight</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/sub_button_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <!-- 设置项标题 -->
    <style name="settingItemTextview" parent="android:style/Widget.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:textSize">@dimen/setting_text_size</item>
    </style>

    <!-- 标题栏 -->
    <style name="titlebarstyle" parent="android:Theme">
        <item name="android:windowTitleSize">38dip</item>
    </style>

    
    <!-- 多行编辑框 -->
    <style name="multiLineEdit" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>      
        <item name="android:layout_height">@dimen/MultiEditHeight</item>   
        <item name="android:paddingLeft">@dimen/splitMargin</item>     
        <item name="android:background">@color/white</item>     
        <item name="android:gravity">top|left</item>     
        <item name="android:textColor">@color/black</item>   
        <item name="android:textColorHint">@color/hint</item> 
        <item name="android:textSize">@dimen/editTextSize</item>
        <item name="android:singleLine">false</item>
    </style>

    <!-- 白色竖向隔离线 -->
    <style name="vsplitViewWhite" parent="android:style/Widget.TextView">
        <item name="android:layout_width">@dimen/vSplitWidth</item>
        <item name="android:layout_height">@dimen/vSplitHeight</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- 白色横向隔离线 -->
    <style name="hsplitViewWhite" parent="android:style/Widget.TextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/hSplitHeight</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- 主按钮 -->
    <style name="buttonText" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
    </style>
</resources>