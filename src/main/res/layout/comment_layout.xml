<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/commentContent"
            style="@style/multiLineEdit"
            android:layout_height="@dimen/MultiEditHeight"
            android:layout_margin="@dimen/margin"
            android:hint="@string/input_comments" >
        </EditText>

        <Button
            android:id="@+id/submit"
            style="@style/mainButton"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/smallmargin"
            android:text="@string/submit" />

        <LinearLayout
            android:id="@+id/comment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/smallmargin"
                android:text="@string/comment_number"
                android:textColor="@color/green"></TextView>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/yt_line"></ImageView>
        </LinearLayout>
        
        <TextView
            android:id="@+id/comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/smallmargin"  />
    </LinearLayout>

    <Button
        android:id="@+id/back"
        style="@style/mainButton"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/smallmargin"
        android:text="@string/back" />

</LinearLayout>